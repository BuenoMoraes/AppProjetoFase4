<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppProjetoFase4.Views.PageAddReserva">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="64">
            <!--<Image Source=""></Image>-->
            <Entry Placeholder="Usuário" x:Name="enUsuario"></Entry>
            <Entry Placeholder="Livro" x:Name="enLivro"></Entry>
            <Label Text="Inicio Reserva"/>
            <DatePicker
               x:Name="startDatePicker"
               MinimumDate="01/01/1970" 
               MaximumDate="01/01/2100"
               Format="dd/MM/yyyy"
            />

            <Label Text="Termino Reserva"/>
            <DatePicker
               x:Name="endDatePicker"
               MinimumDate="01/01/1970" 
               MaximumDate="01/01/2100"
               Format="dd/MM/yyyy"
            />
            <Button x:Name="btnAddReserva" Text="Adicionar Reserva" Clicked="btnAddReserva_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>